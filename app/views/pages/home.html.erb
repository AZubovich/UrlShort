<h1 class="header">URL Shorten Application</h1> 
  <div class="form_div">
   <%=form_tag(links_create_path, method: :post) do  %>
    <% flash.each do |name, msg| %>
      <div class="alert alert-danger" role="alert">
        <%= msg %>
      </div>
    <% end %>
     <div class="main-divv"> 
          <%= text_field_tag :url ,"", :class => "form-control"%> 
            <div class = "submit_div">
              <%= submit_tag "Short", :class => "btn btn-primary", :style => "width:120px;height:60px;"%>
            </div>
      </div> 
   <%end%>
  </div> 
<center>
  <%- if params[:link_id] != nil %>
  <h2>Your original url is: <%=@original_url %></h2>
  <h2>Your shortened url is: <%=link_to @shorten_url , redirect_path(:short_url => @shorten_url) %></h2>
  <%end%>
